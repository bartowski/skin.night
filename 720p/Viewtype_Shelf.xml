<!--Alaska-->

<includes>
	
	<include name="Viewtype_Shelf">
<!-- Browser -->
	
		<control type="panel" id="51">
			<viewtype label="Shelf">icon</viewtype>
			<posx>0</posx>
			<posy>20</posy>
			<width>1280</width>
			<height>720</height>
			<pagecontrol>61</pagecontrol>
			<scrolltime>0</scrolltime>
			<orientation>vertical</orientation>
			<onup>7000</onup>
			<ondown>7000</ondown>
			<visible>Container.Content(artists) | Container.Content(albums)</visible>
			<itemlayout width="160" height="130">
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>160</width>
					<height>160</height>
					<texture>wall/musicwallmatte.png</texture>
					<colordiffuse>black</colordiffuse>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>160</width>
					<height>160</height>
					<fadetime>200</fadetime>
					<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<animation type="Conditional" reversible="false" condition="true">
						<effect type="fade" start="0" end="40" time="0" />
					</animation>
				</control>
				<control type="image">
					<posx>16</posx>
					<posy>16</posy>
					<width>162</width>
					<height>162</height>
					<texture>wall/musicwallframeNF.png</texture>
					<colordiffuse>WallIconDiffuse</colordiffuse>					
				</control>				
			</itemlayout>
			<focusedlayout width="160" height="160">
				<control type="image">
					<posx>0</posx>
					<posy>-30</posy>
					<width>160</width>
					<height>160</height>
					<texture background="true" diffuse="wall/musicwallmatte.png">$INFO[ListItem.Icon]</texture>
					<!--<colordiffuse>WallIconDiffuse</colordiffuse>-->
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<animation type="Focus" reversible="false">
						<effect type="slide" start="0,0" end="0,-40" time="200" />
					</animation>
				</control>
			</focusedlayout>
		</control>
	
	</include>

</includes>
