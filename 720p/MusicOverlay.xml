<window id="2004">
	<defaultcontrol>-</defaultcontrol>
	<controls>
	<control type="group">
	<visible>Skin.HasSetting(zune_music)</visible>
		<control type="multiimage">
			<posx>9</posx>
			<posy>600</posy>
			<width>1280</width>
			<height>127</height>
			<imagepath>zune/</imagepath>
			<timeperimage>100</timeperimage>
			<randomize>true</randomize>
			<fadetime>10</fadetime>
			<visible>Player.Playing</visible>
		</control>
			<control type="image">
				<description>cover image</description>
				<posx>500</posx>
				<posy>630</posy>
				<width>50</width>
				<height>50</height>
				<texture diffuse="music/musicwallmatte.png">$INFO[MusicPlayer.Cover]</texture>
			</control>
			<control type="image">
				<posx>494</posx>
				<posy>624</posy>
				<width>60</width>
				<height>60</height>
				<texture>music/musicwallframeF.png</texture>
				<aspectratio scalediffuse="false">stretch</aspectratio>
			</control>
			<control type="label">
				<description>artist name</description>
				<posx>560</posx>
				<posy>636</posy>
				<width>200</width>
				<height>18</height>
				<aligny>center</aligny>
				<align>center</align>
				<font>Font_Bartowski_Zune</font>
				<textcolor>grey2</textcolor>
				<label>$INFO[MusicPlayer.Artist]</label>
				<animation type="Conditional" reversible="false" condition="Player.Playing" loop="true">
					<effect type="fade" start="0" end="100" time="500" delay="0" />
					<effect type="fade" start="100" end="0" time="500" delay="7000" />
					<effect type="fade" start="100" end="0" time="500" delay="14000" />
				</animation>
			</control>
			<control type="label">
				<description>album name</description>
				<posx>560</posx>
				<posy>636</posy>
				<width>200</width>
				<height>18</height>
				<aligny>center</aligny>
				<align>center</align>
				<font>Font_Bartowski_Zune</font>
				<textcolor>grey2</textcolor>
				<label>$INFO[MusicPlayer.Album]</label>
				<animation type="Conditional" reversible="false" condition="Player.Playing" loop="true">
					<effect type="fade" start="0" end="100" time="500" delay="7500" />
					<effect type="fade" start="100" end="0" time="500" delay="14000" />
				</animation>
			</control>
			<control type="progress" id="23">
				<texturebg>osd/osd_progress_back1.png</texturebg>
				<lefttexture>osd/left.png</lefttexture>
				<midtexture>osd/mid.png</midtexture>
				<righttexture>osd/new_pause2.png</righttexture>
				<info>Player.Progress</info>
				<posx>560</posx>
				<posy>660</posy>
				<width>200</width>
				<height>10</height>
			</control>
	</control>
	</controls>
</window>