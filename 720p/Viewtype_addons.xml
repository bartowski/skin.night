<!--Alaska-->

<includes>
	<include name="Viewtype_Addons">

		<!-- Browser -->
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<texture>list/file-black-background1.png</texture>
			<visible>Control.IsVisible(50)</visible>
		</control>
		
		<control type="fixedlist" id="50">
			<posx>0</posx>
			<posy>-14</posy>
			<height>885</height>
			<width>1680</width>
			<onup>50</onup>
			<ondown>50</ondown>
			<onleft>7000</onleft>
			<onright>60</onright>
			<scrolltime>0</scrolltime>
			<viewtype label="$LOCALIZE[744]">list</viewtype>
			<orientation>vertical</orientation>
			<focusposition>9</focusposition>
			<movement>9</movement>
			<pagecontrol>60</pagecontrol>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_Viewtype_Files_LeftArea</include>
			<itemlayout width="1210" height="36">
				<control type="label">
					<posx>660</posx>
					<posy>0</posy>
					<width>700</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_Bartowski_List_Main</font>
					<textcolor>Text-Filemode</textcolor>
					<label>$INFO[ListItem.Label2]</label>
					<visible></visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>38</posy>
					<width>880</width>
					<height>4</height>
					<aspectratio>stretch</aspectratio>
					<texture>confluence/separator.png</texture>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>0</posy>
					<width>720</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_Bartowski_List_Main</font>
					<textcolor>Text-Filemode</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible></visible>
				</control>
			</itemlayout>
			<focusedlayout width="1210" height="36">
				<control type="image">
					<posx>0</posx>
					<posy>38</posy>
					<width>880</width>
					<height>4</height>
					<aspectratio>stretch</aspectratio>
					<texture>confluence/separator.png</texture>
				</control>
				<control type="image">
					<posx>-70</posx>
					<posy>-34</posy>
					<width>871</width>
					<height>121</height>
					<texture>list/highlight.png</texture>
					<animation type="Focus" reversible="false">
						<effect type="fade" start="0" end="70" time="800" />
					</animation>
				</control>
				<control type="label">
					<posx>20</posx>
					<posy>0</posy>
					<width>700</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_Bartowski_List_Main</font>
					<textcolor>ffffffff</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible></visible>
				</control>
				<control type="label">
					<posx>660</posx>
					<posy>0</posy>
					<width>700</width>
					<height>46</height>
					<aligny>center</aligny>
					<font>Font_Bartowski_List_Main</font>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Label2]</label>
					<visible></visible>
				</control>
			</focusedlayout>
		</control>		
	
	<control type="group">
	<include>Animation_HiddenByInfo</include>
	<visible>Control.IsVisible(50)</visible>
	<include>Animation_Viewtype_Wall_Title</include>	
		<control type="image">
			<posx>810</posx>
			<posy>380</posy>
			<width>460</width>
			<height>330</height>
			<aspectratio align="right" aligny="bottom">keep</aspectratio>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<bordertexture border="5">confluence/button-nofocus.png</bordertexture>
			<bordersize>5</bordersize>
			<fadetime>100</fadetime>
		</control>
		<control type="image">
			<posx>810</posx>
			<posy>380</posy>
			<width>460</width>
			<height>330</height>
			<aspectratio align="right" aligny="bottom">keep</aspectratio>
			<texture background="true">$INFO[ListItem(-1).Icon]</texture>
			<bordertexture border="5">confluence/button-nofocus.png</bordertexture>
			<bordersize>5</bordersize>
			<fadetime>100</fadetime>
			<animation type="Hidden">
			<effect type="zoom" time="400" center="auto" start="100" end="180" tween="cubic" easing="in" />
				<effect type="fade" time="400" start="100" end="0" />
			</animation>
			<visible>Container(50).OnNext</visible>
		</control>
		<control type="image">
			<posx>810</posx>
			<posy>380</posy>
			<width>460</width>
			<height>330</height>
			<aspectratio align="right" aligny="bottom">keep</aspectratio>
			<texture background="true">$INFO[ListItem(1).Icon]</texture>
			<bordertexture border="5">confluence/button-nofocus.png</bordertexture>
			<bordersize>5</bordersize>
			<fadetime>100</fadetime>
			<animation type="Hidden">
			<effect type="zoom" time="400" center="auto" start="100" end="180" tween="cubic" easing="in" />
				<effect type="fade" time="400" start="100" end="0" />
			</animation>
			<visible>Container(50).OnPrevious</visible>
		</control>
	</control>
	
		<control type="textbox"><!-- Plot TV -->
			<posx>790</posx>
			<posy>70</posy>
			<width>476</width>
			<height>280</height>
			<align>justify</align>
			<info>ListItem.Property(Addon.Description)</info>
			<font>Font_Bartowski_Movies</font>
			<textcolor>ffffffff</textcolor>
			<autoscroll time="3000" delay="5000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
			<include>Animation_HiddenByInfo</include>
			<include>Animation_Viewtype_Wall_Plot</include>
			<visible>Control.IsVisible(50)</visible>
		</control>
		
		<control type="scrollbar" id="60">
			<include>Animation_ZoomInZoomOut</include>
			<posx>1280</posx>
			<posy>100</posy>
			<width>25</width>
			<height>460</height>
			<visible allowhiddenfocus="true">Control.IsVisible(50) + Control.HasFocus(60)</visible>
			<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
			<textureslidernibfocus>ScrollBarV_Nib_Focus1.png</textureslidernibfocus>
			<onleft>50</onleft>
			<showonepage>true</showonepage>
			<orientation>vertical</orientation>
			<include>Animation_CommonFade</include>
			<animation effect="slide" start="0,0" end="-500,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(60)">Conditional</animation>
			<animation effect="slide" start="0,0" end="-530,0" time="400" tween="cubic" easing="inout" condition="Control.HasFocus(60)">Conditional</animation>
		</control>
		
	</include>
</includes>